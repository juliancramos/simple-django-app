pipeline {
    agent any

    stages {

        stage('Instalar dependencias') {
            steps {
                dir('cool_counters') {
                    sh 'pip install --user -r requirements.txt'
                }
            }
        }

        stage('Linter') {
            steps {
                dir('cool_counters') {
                    sh 'pip install --user pylint'
                    sh '~/.local/bin/pylint **/*.py || true'
                }
            }
        }

        stage('Migraciones') {
            steps {
                dir('cool_counters') {
                    sh 'python3 manage.py migrate'
                }
            }
        }

        stage('Levantar app') {
            steps {
                dir('cool_counters') {
                    sh 'nohup python3 manage.py runserver 0.0.0.0:8000 &'
                }
            }
        }
    }
}